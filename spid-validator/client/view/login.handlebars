</head>
<body> 
    <div id="outer">
	     <div id="contain-all">
            <div class="inner">
                <div class="grid spacer-top-5">
                    <div class="width-one-whole spid-logo">
                        <img src="/img/spid-level{{ params.spidLevel }}-logo-bb.svg" 
                            onerror="this.src='/img/spid-level{{ params.spidLevel }}-logo-bb.png'; this.onerror=null;"
                            alt="SPID {{ params.spidLevel }}" />
                    </div>
                </div> 

                <div class="grid spacer-top-1">
                    <div class="width-one-whole pa-title">{{ params.organizationDisplayName }}</div>
                </div>
                <div class="grid spacer-top-1">
                    <div class="width-one-whole"><span class="spid-hr"></span></div>
                </div>

                {{#if error}}
                <div class="grid spacer-top-1" style="max-width: 600px;">
                    <div class="width-one-whole">
                        <!-- ERROR -->
                        <div class="alert alert-error" role="alert">
                            <div class="alert-body">
                                <h3 class="alert-heading">Errore</h3>
                                <p class="alert-text">{{ error }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}

                <!-- SPID LOGIN FORM * begin * -->
                <form name="spid-login" id="spid-login" action="/testenv/login" method="post" class="grid">
                    <div class="width-one-whole">         
                        <fieldset>
                            <div>
                                <label for="nome_utente" class="float-left label-bold">Nome utente</label>
                                <!--span class="forgot-link">
                                    <a href="#">
                                        Nome utente dimenticato?
                                        <img class="open-link" src="/img/open-link.svg" onerror="this.src='/img/open-link.png'; this.onerror=null;" alt="Si apre una nuova pagina" />
                                    </a>
                                </span-->
                                <input id="username" name="username" type="text" class="input-error"><span class="clear"></span>
                            </div>
                            <div>
                                <label for="password" class="float-left label-bold">Password</label>
                                <!--span class="forgot-link">
                                    <a href="#">
                                        Password dimenticata?
                                        <img class="open-link" src="/img/open-link.svg" onerror="this.src='/img/open-link.png'; this.onerror=null;" alt="Si apre una nuova pagina" />
                                    </a>
                                </span-->
                                <input id="password" name="password" type="password" class="showpassword"><span class="clear"></span>
                            </div>
                            <!--div class="push-right spacer-top-2"><input id="showHide" type="checkbox" class="showpasswordcheckbox" /> <label class="showHideLabel" for="showHide">Mostra password</label></div-->
                            <input id="spidLevel" name="params[spidLevel]" type="hidden" value="{{ params.spidLevel }}" />
                            <input id="organizationDisplayName" name="params[organizationDisplayName]" type="hidden" value="{{ params.organizationDisplayName }}" />
                            <input id="samlRequest" name="params[samlRequest]" type="hidden" value="{{ params.samlRequest }}" />
                            <input id="relayState" name="params[relayState]" type="hidden" value="{{ params.relayState }}" />
                            <input id="sigAlg" name="params[sigAlg]" type="hidden" value="{{ params.sigAlg }}" />
                            <input id="signature" name="params[signature]" type="hidden" value="{{ params.signature }}" />
                            <input id="purpose" name="params[purpose]" type="hidden" value="{{ params.purpose }}" />
                            <input id="minAge" name="params[minAge]" type="hidden" value="{{ params.minAge }}" />
                            <input id="maxAge" name="params[maxAge]" type="hidden" value="{{ params.maxAge }}" />

                        </fieldset>
                        <button type="submit" class="italia-it-button italia-it-button-size-m button-spid spacer-top-1">
                            <span class="italia-it-button-icon"><img src="/img/spid-ico-circle-bb.svg" onerror="this.src='/img/spid-ico-circle-bb.png'; this.onerror=null;" alt="" /></span>
                            <span class="italia-it-button-text">Entra con SPID</span>
                        </button>
                    </div>
                </form>
            </div>
	     </div>
    </div>
    <div id="header">
        <div id="header-inner">
            <img id="idp-logo" src="/img/idp-logo.png" alt="SPID Validator" />
        </div>
    </div>
    <div id="footer">
	    <div id="footer-inner">
            <img id="spid-agid-logo" src="/img/spid-agid-logo-bb.png" alt="SPID - AgID Agenzia per l'Italia Digitale" />
        </div>
    </div>    
    <script src="/js/jquery.min.js"></script>
    <script>
        $(function(){
            $(".showpassword").each(function(index,input) {
                var $input = $(input);
                $(".showpasswordcheckbox").click(function() {
                    var change = $(this).is(":checked") ? "text" : "password";
                    var rep = $("<input type='" + change + "' />")
                    .attr("id", $input.attr("id"))
                    .attr("name", $input.attr("name"))
                    .attr('class', $input.attr('class'))
                    .val($input.val())
                    .insertBefore($input);
                    $input.remove();
                    $input = rep;
                })
            });
        });
    </script>
</body>
</html>
